@model PagedList.IPagedList<PetCenter.Common.Core.Entities.Justificacion>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Listado de Justificaciones";
}

<h2>Listado de Justificaciones</h2>

<p>
    @Html.ActionLink("Crear Justificación", "Create")
</p>

@using (Html.BeginForm("Index", "Contratoes", FormMethod.Get))
{
    <p>
        Buscar por Empleado: @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Buscar" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Empleado", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            Descripción
        </th>
        <th>
            Estado
        </th>
        <th>
            Usuario Aprobado
        </th>
        <th>
            Fecha Aprobación
        </th>
        <th></th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Empleado.XNombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @if(item.UsuarioAprueba != null)
                {
                    @Html.Label("Admin");
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.UsuarioAprueba)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAprobacion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.JustificacionId }) |
                    
                @if(item.UsuarioAprueba == null)
                {
                 
                    @Html.ActionLink("Aprobar", "Aprobar", new { id = item.JustificacionId })
                }
            </td>
        </tr>
    }

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))


@if(TempData["justificacionomsg"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            bootbox.alert("@TempData["justificacionomsg"]");
        };
    </script>
}