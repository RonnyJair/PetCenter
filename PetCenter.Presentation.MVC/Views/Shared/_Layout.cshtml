<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" type="text/css" href="http://sintad.com:8080/sinteconline/resources/bootstrap-3.1.1/css/bootstrap-datetimepicker.min.css">  
    <link href="~/Content/navPC.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="http://sintad.com:8080/sinteconline/resources/bootstrap-3.1.1/js/bootstrap-growl.min.js"></script>
    <script src="http://sintad.com:8080/sinteconline/resources/bootstrap-3.1.1/js/jquery.validate.js"></script>
    <script src="http://sintad.com:8080/sinteconline/resources/bootstrap-3.1.1/js/localization/messages_es.js"></script>
    <script src="http://sintad.com:8080/sinteconline/resources/bootstrap-3.1.1/js/moment.js"></script>
    <script src="http://sintad.com:8080/sinteconline/resources/bootstrap-3.1.1/js/bootstrap-datetimepicker.js"></script>
    <script src="/Scripts/js.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pet Center", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">RR.HH<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Planilla", "ProcesarPlanilla", "Planillas")</li>
                            <li>@Html.ActionLink("Empleado", "Index", "Empleadoes")</li>
                            <li>@Html.ActionLink("Concepto", "Index", "Conceptoes")</li>
                            <li>@Html.ActionLink("Reporte", "IndexReporte", "Empleadoes")</li>
                            <li>@Html.ActionLink("Asistencia", "Index", "Asistencias")</li>
                            <li>@Html.ActionLink("Justificaciones", "Index", "Justificacions")</li>
                            <li>@Html.ActionLink("Contratos", "Index", "Contratoes")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Pet Center</p>
        </footer>
    </div>

</body>
</html>
